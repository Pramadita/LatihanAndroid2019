                android:text="Remove"
                android:textAlignment="center"
                />


            <Button
            android:id="@+id/ChangeEmailButton"
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:text="Ubah Email"
            android:textAlignment="center"
            />



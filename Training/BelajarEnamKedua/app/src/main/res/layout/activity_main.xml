<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANDROID"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/TxtPelatihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pelatihan Android"
        android:layout_marginTop="75dp"
        android:textSize="15sp"
        android:textColor="@android:color/holo_blue_light"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/TxtBandung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apriani Puti Purfini"
        android:layout_marginTop="190dp"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/Txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bandung"
        android:textStyle="bold"
        android:layout_marginTop="210dp"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtBandung"
        android:text=" LINEAR LAYOUT "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:background="@android:color/holo_green_dark"

        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtBandung"
        android:text="RELATIVE LAYOUT"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/btn1"
        android:layout_marginLeft="40dp"
        android:background="@android:color/holo_purple"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_marginTop="10dp"
        android:text="  TABLE LAYOUT  "
        android:layout_marginLeft="60dp"
        android:background="@android:color/holo_blue_dark"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_marginTop="10dp"
        android:text="     SCROLL VIEW    "
        android:layout_toRightOf="@+id/btn3"
        android:layout_marginLeft="40dp"
        android:background="@color/Yellow"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="191dp"
        android:layout_height="80dp"
        android:layout_below="@+id/TxtPelatihan"
        app:srcCompat="@drawable/android"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>